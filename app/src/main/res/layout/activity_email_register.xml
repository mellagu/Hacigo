<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prime"
    tools:context=".ui.auth.emailRegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_baby"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/ic_baby"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back_button" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Daftar Akun Hacigo\nGratis !"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@id/cv_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_baby" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_register"
            android:layout_width="300dp"
            android:layout_height="700dp"
            android:elevation="9dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_reg" />

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama Depan"
            android:textColor="@color/prime"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toTopOf="@id/cv_register" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_first_name_field"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_reguler"
            android:hint="ketik nama depan"
            android:inputType="textCapWords"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="12dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_first_name" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama Belakang"
            android:textColor="@color/prime"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_first_name_field" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_last_name_field"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_reguler"
            android:hint="type your last name"
            android:inputType="textCapWords"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="12dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_last_name" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Email"
            android:textColor="@color/prime"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_last_name_field" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_email_field"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_reguler"
            android:hint="example@mail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="12dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Kata Sandi"
            android:textColor="@color/prime"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_email_field" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_password_field"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_reguler"
            android:hint="ketik kata sandi "
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="12dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_password" />

        <TextView
            android:id="@+id/tv_password_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Konfirmasi Kata Sandi"
            android:textColor="@color/prime"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_password_field" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_password_field_confirmation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_reguler"
            android:hint="ketik konfirmasi kata sandi "
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="12dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_password_confirmation" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_register_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="40dp"
            app:cardBackgroundColor="@color/prime"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="@id/cv_register"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/tv_password_field_confirmation">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_reguler"
                    android:text="Daftar Sekarang"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="@id/cv_register"
            app:layout_constraintTop_toBottomOf="@id/cv_register_button">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                android:text="Sudah memiliki akun?"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/login_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Masuk sekarang!"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_toEndOf="@id/tv_login"
                android:textColor="@color/prime"/>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>